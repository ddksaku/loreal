<Window x:Class="LorealOptimiseGui.SelectDivision"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors;assembly=DevExpress.Xpf.Core.v11.1"
    Title="Optimise" Height="100" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="0,0,0,0" Name="lblSelectDivision" HorizontalAlignment="Left" VerticalAlignment="Center" Width="117">Select your division:</Label>
        <dxe:ComboBoxEdit Grid.Row="0" Name="cboDivision" Margin="120,0,10,0" Height="25" />
        <Button Command="{Binding LoginCommand}" Grid.Row="1" HorizontalAlignment="Right" Height="25" Margin="0,0,10,5" Name="btnLogin" Width="75" Click="btnLogin_Click">Login</Button>
    </Grid>
        

</Window>
